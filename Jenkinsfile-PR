pipeline {
    agent any
    stages {
        stage('Start') {
            steps{
                sh 'ls -la'
            }
        }
        stage('Checkout') {
            steps{
                cleanWs()
                checkout scm
            }
        }
        stage('Print env') {
            steps{
                sh 'env'
            }
        }
        stage('Commit message lint') {
            tools {
                nodejs "nodejs"
            }
            steps{
                sh 'npx commitlint --last -x @commitlint/config-conventional'
            }
        }
    }
}
