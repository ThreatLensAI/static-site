pipeline {
    tools {
        nodejs "nodejs"
    }
    agent any
    stages {
        stage('Start') {
            steps{
                sh 'ls -la'
            }
        }
        stage('Checkout') {
            steps{
                cleanWs()
                checkout scm
            }
        }
        stage('Print after checkout') {
            steps{
                sh 'ls -la'
            }
        }
        stage('Commit message lint') {
            steps{
                sh 'npx commitlint --last -x @commitlint/config-conventional'
            }
        }
    }
}
